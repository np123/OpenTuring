unit
module pervasive Sort
    export sortint, sortchar, sortreal,
    stablesortint, stablesortchar, stablesortreal

    external "sort_sortint" procedure sortint (arr : array 1 .. * of int, sz : int)
    external "sort_sortint" procedure sortchar (arr : array 1 .. * of char, sz : int)
    external "sort_sortreal" procedure sortreal (arr : array 1 .. * of real, sz : int)
    external "sort_sortstring" procedure sortstring (arr : array 1 .. * of real, sz : int)
    external "sort_stablesortint" procedure stablesortint (arr : array 1 .. * of int, sz : int)
    external "sort_stablesortint" procedure stablesortchar (arr : array 1 .. * of char, sz : int)
    external "sort_stablesortreal" procedure stablesortreal (arr : array 1 .. * of int, sz : int)
    
end Sort
